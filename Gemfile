source 'https://rubygems.org'
ruby '2.1.5'

gem 'rails',           '4.1.8'
gem 'pg'                          # Use postgresql as the database
gem 'sass-rails',   '~> 4.0.3'    # Use SCSS for stylesheets
gem 'uglifier',     '>= 1.3.0'    # Use Uglifier as compressor for JS
gem 'coffee-rails', '~> 4.0.0'    # Use CoffeeScript
gem 'jquery-rails'                # Use jquery as the JS library
gem 'turbolinks'                  # Use Turbolinks
gem 'omniauth-facebook'
gem 'omniauth-twitter'

group :development, :test do
  gem 'thin'
  gem 'spring'
  gem 'pry-rails'
  gem 'pry-byebug'
  gem 'better_errors'
  gem 'binding_of_caller'
end